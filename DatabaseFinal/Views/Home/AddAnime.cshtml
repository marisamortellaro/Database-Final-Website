@model List<Anime>
@{
    ViewData["Title"] = "AddAnime";
}

<h2>Add an Anime</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="HandleNewAnime">
            <div class="form-group">
                <label for="name" class="control-label">Name of Anime</label>
                <input name="name" class="form-control" />
            </div>
            <div class="form-group">
                <label for="description" class="control-label">Description of Anime</label>
                <input name="description" class="form-control" />
            </div>
            <div class="form-group">
                <label for="company" class="control-label">Company who makes Anime</label>
                <input name="company" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Add a new Anime" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<h2>Existing Anime</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Company
            </th>
        </tr>
    </thead>
    @foreach (Anime location in Model)
    {
    <tr>
        <td>
            @location.Name
        </td>
        <td>
            @location.Description
        </td>
        <td>
            @location.Company
        </td>
    </tr>
    }
</table>


<style>

    
    body {
        background: url('http://colourlovers.com.s3.amazonaws.com/images/patterns/1620/1620154.png'), url('http://www.colourlovers.com/img/508F92/228/161/Elegant_Cyanide.png'), #cccccc;
        _background: #e6ca6e; /*IE cheat code*/
        background-size: auto 40px, auto 385px, auto auto;
        background-position: 0px 0px, 0px 40px, 0px 0px;
        background-repeat: repeat-x, repeat-x, repeat;
    }
