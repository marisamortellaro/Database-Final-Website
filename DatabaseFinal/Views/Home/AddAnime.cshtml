@model List<Anime>
@{
    ViewData["Title"] = "AddAnime";
}

<h2>AddAnime</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="HandleNewAnime">
            <div class="form-group">
                <label for="name" class="control-label">Name of Anime</label>
                <input name="name" class="form-control" />
            </div>
            <div class="form-group">
                <label for="description" class="control-label">Description of Anime</label>
                <input name="description" class="form-control" />
            </div>
            <div class="form-group">
                <label for="company" class="control-label">Company who makes Anime</label>
                <input name="company" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Add a new Anime" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<h2>Existing Anime</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Company
            </th>
        </tr>
    </thead>
    @foreach (Anime location in Model)
    {
    <tr>
        <td>
            @location.Name
        </td>
        <td>
            @location.Description
        </td>
        <td>
            @location.Company
        </td>
    </tr>
    }
</table>